<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Game Results</title>
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <style>
        #resultsChart {
            width: 400px;
            height: 400px !important;
        }
        body{
            background-color: black;
        }
        .container{
            /* border: 2px solid black; */
            display: flex;
            justify-content: center;
            margin-top: 10%;
        }
        .card{
            display: flex;
            flex-direction: row;
            height: 430px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="card" >
            <div class="card-body">
                <h1>Quiz Game Results</h1>
                <h2>Student Details:</h2>
                <h5>
                    Name: <%= username %>
                </h5>
                <h5>
                    Age: <%= age %>
                </h5>
                <ul>
                    <li>Score: <%= score*4 %></li>
                    <li>Correct Answers: <%= correctAnswers %></li>
                    <li>Incorrect Answers: <%= incorrectAnswers %></li>

                </ul>
            </div>
            <div class="card-body">
                <canvas id="resultsChart"></canvas>
            </div>
        </div>
    </div>
    <script>
        const ctx = document.getElementById('resultsChart').getContext('2d');
        const correctAnswers = `<%= correctAnswers %>`;
        const incorrectAnswers = `<%= incorrectAnswers %>`;
        
        const resultsChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: ['Correct Answers', 'Incorrect Answers'],
                datasets: [{
                    data: [correctAnswers, incorrectAnswers],
                    backgroundColor: ['green', 'red'],
                    borderColor: ['green', 'red'],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        callbacks: {
                            label: function(tooltipItem) {
                                const label = tooltipItem.label || '';
                                const value = tooltipItem.raw || 0;
                                return `${label}: ${value}`;
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>
